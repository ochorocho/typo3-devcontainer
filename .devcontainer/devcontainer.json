{
	"name": "TYPO3 CMS Core",
	"image": "ghcr.io/ochorocho/santas-little-helper:8.4",
	"workspaceFolder": "/workspaces/typo3-devcontainer",
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/typo3-devcontainer,type=bind,consistency=cached",
	"customizations": {
		"codespaces": {
			"openFiles": [
				".devcontainer/DEVCONTAINER-INFO.md"
			]
		},
		"vscode": {
			"extensions": [
				"alexcvzz.vscode-sqlite",
				"EditorConfig.EditorConfig",
				"yzhang.markdown-all-in-one"
			],
			"settings": {
				"workbench.startupEditor": "readme",
				"workbench.editorAssociations": {
					"DEVCONTAINER-INFO.md": "vscode.markdown.preview.editor"
				}
			}
		}
	},
	"remoteUser": "vscode",
	"postCreateCommand": ".devcontainer/postCreateCommand.sh",
	"postStartCommand": ".devcontainer/postStartCommand.sh",
	// We need a fixed port to be able to define a base url in the site config
	"appPort": 8888,
	"forwardPorts": [
		8025,
		8888
	],
	"portsAttributes": {
		"8888": {
			"label": "Webserver",
			"onAutoForward": "notify",
			"visibility": "public"
		},
		"8025": {
			"label": "MailCatcher",
			"onAutoForward": "notify",
			"visibility": "public"
		}
	}
}
